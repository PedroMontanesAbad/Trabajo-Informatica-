#include "funciones_comunes.h"


int main(void)//system cls importantes antes de cada funcion
{
	system("color 0A");
	
	
	
	//Preparaciones antes del programa:
	int i, j = 0, anyo, num_cuenca, num_embalse, f = 0,n;

