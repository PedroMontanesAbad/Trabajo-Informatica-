//Texto1
void Texto1()
{
	int x = 19, y = 9, i, fila = 81, columna = 20;

	////Dibujar Cuadrados////
	{
		//Cuadrado Grande
		{
			for (i = 0; i < fila; i++)//Fila Arriba
			{
				x++;
				gotoxy(x, y);
				printf("%c", 205);
			}
			gotoxy(x, y);
			printf("%c", 187);
			for (i = 0; i < columna; i++)//Columna derecha
			{
				y++;
				gotoxy(x, y);
				printf("%c", 186);

			}
			gotoxy(x, y);
			printf("%c", 188);
			for (i = 0; i < fila; i++)//Fila abajo
			{
				x--;
				gotoxy(x, y);
				printf("%c", 205);
			}
			gotoxy(x, y);
			printf("%c", 200);
			for (i = 0; i < columna; i++)//Columna izquierda
			{
				y--;
				gotoxy(x, y);
				printf("%c", 186);
			}
			gotoxy(x, y);
			printf("%c", 201);
		}
		//Separador
		{
			//Columna centro
			{
				x = 60, y = 9;
				gotoxy(x, y);
				printf("%c", 203);
				for (i = 0; i < columna; i++)
				{
					y++;
					gotoxy(x, y);
					printf("%c", 186);
				}
				gotoxy(x, y);
				printf("%c", 202);
			}

			//Fila 
			{
				x = 19, y = 19;
				gotoxy(x, y);
				printf("%c", 204);
				for (i = 0; i < fila; i++)//Fila Arriba
				{
					x++;
					gotoxy(x, y);
					printf("%c", 205);
				}
				gotoxy(x, y);
				printf("%c", 185);

			}

			gotoxy(60, 19), printf("%c", 206);
		}


		//Texto 
		{

			//Primer Cuadrado
			gotoxy(20, 10);
			printf("-----------------");
			gotoxy(20, 18);
			printf("Enter ( 1 )");

			//Segundo Cuadrado
			gotoxy(61, 10);
			printf("-----------------");
			gotoxy(61, 18);
			printf("Enter ( 2 )");

			//Tercer Cuadrado
			gotoxy(20, 20);
			printf("Volver al menu");
			gotoxy(20, 28);
			printf("Enter ( 3 )");

			//Cuarto Cuadrado
			gotoxy(61, 20);
			printf("Salir");
			gotoxy(61, 28);
			printf("Enter ( 4 )");

			//TITULO
			gotoxy(53, 4);
			printf("-------------");
		}

		gotoxy(55, 7);
		printf("Ir a: ");
		gotoxy(65, 7);
	}
}

